{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="home-content">
        <div class="contact-form-container">
            <h2>Inscription</h2>
            {{ form_start(userForm, {'attr': {'class': 'form'}}) }}
                <div class="form-group">
                    {{ form_label(userForm.nom) }}
                    {{ form_widget(userForm.nom, {'attr': {'class': 'form-input'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(userForm.motDePasse) }}
                    {{ form_widget(userForm.motDePasse, {'attr': {'class': 'form-input'}}) }}
                </div>
				<div class="form-group">
                    {{ form_label(userForm.email) }}
                    {{ form_widget(userForm.email, {'attr': {'class': 'form-input'}}) }}
                </div>
                {% if userForm.agreeTerms is defined %}
                    <div class="form-group">
                        {{ form_widget(userForm.agreeTerms) }}
                        {{ form_label(userForm.agreeTerms) }}
                    </div>
                {% endif %}

                <button type="submit" class="btn-submit">
                    <span>S'inscrire</span>
                </button>
            {{ form_end(userForm) }}
        </div>
    </div>
{% endblock %}