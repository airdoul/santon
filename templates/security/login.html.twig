{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
        <div class="home-content">
            <div class="contact-form-container">
    <h2>Connexion</h2>
    <form method="post" class="form">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <div class="form-group">
            <label for="nom">Nom</label>
            <input type="text" value="{{ last_username }}" name="_nom" id="nom" class="form-input" required autofocus>
        </div>
        <div class="form-group">
            <label for="motDePasse">Mot de passe</label>
            <input type="password" name="_motDePasse" id="motDePasse" class="form-input" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn-submit" type="submit">
            <span>Se connecter</span>
        </button>
    </form>
    <p>Vous n'avez pas de compte? <a class="sign" href="{{ path('app_register') }}">Inscription</a></p>
</div>
    </div>
{% endblock %}
